<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="tld.domain.login.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardScreen"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/no_transition"
            app:popEnterAnim="@anim/no_transition"
            app:popExitAnim="@anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/dashboardScreen"
        android:name="com.domain.dashboard.DashboardFragment"
        android:label="Dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/no_transition"
            app:popEnterAnim="@anim/no_transition"
            app:popExitAnim="@anim/slide_right"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_dashboardFragment_to_viewItemFragment"
            app:destination="@id/view_nav"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/no_transition"
            app:popEnterAnim="@anim/no_transition"
            app:popExitAnim="@anim/fade_out"
            app:popUpToInclusive="false">

        <argument
            android:name="favItem"
            app:argType="com.domain.myapplication.models.Item"
            app:nullable="false" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="tld.domain.favourites.FavouritesFragment"
        android:label="Favourites">

        <action
            android:id="@+id/action_favouritesFragment_to_viewItemFragment"
            app:destination="@id/view_nav"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/no_transition"
            app:popEnterAnim="@anim/no_transition"
            app:popExitAnim="@anim/slide_right"
            app:popUpToInclusive="false">

            <argument
                android:name="favItem"
                app:argType="com.domain.myapplication.models.Item"
                app:nullable="false" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/videosScreen"
        android:name="tld.domain.videos.VideosFragment"
        android:label="VideosFragment" >
        <action
            android:id="@+id/action_videosFragment_to_viewItemFragment"
            app:destination="@id/view_nav"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/no_transition"
            app:popEnterAnim="@anim/no_transition"
            app:popExitAnim="@anim/fade_out"
            app:popUpToInclusive="false">

            <argument
                android:name="favItem"
                app:argType="com.domain.myapplication.models.Item"
                app:nullable="false" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/downloadsScreen"
        android:name="com.example.downloads.DownloadsFragment"
        android:label="DownloadsFragment" />

    <fragment
        android:id="@+id/latestScreen"
        android:name="com.domain.latest.LatestFragment"
        android:label="LatestFragment" />

    <fragment
        android:id="@+id/moreScreen"
        android:name="com.domain.more.MoreFragment"
        android:label="MoreFragment" />

  <include app:graph="@navigation/view_nav"/>

</navigation>