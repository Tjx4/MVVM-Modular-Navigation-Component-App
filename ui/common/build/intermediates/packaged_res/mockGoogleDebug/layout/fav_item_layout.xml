<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray_background"
    android:paddingHorizontal="0dp"
    android:paddingBottom="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/small_margin"
        android:paddingHorizontal="@dimen/small_margin"
        style="@style/SelectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgFavouriteItemIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_img_dark"
            android:scaleType="centerCrop"
            app:riv_corner_radius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvName"
            style="@style/NormalTextView"
            android:layout_width="0dp"
            android:textColor="@color/dark_text"
            tools:text="Name"
            android:gravity="left"
            android:layout_marginLeft="@dimen/small_margin"
            app:layout_constraintTop_toTopOf="@+id/imgFavouriteItemIcon"
            app:layout_constraintBottom_toBottomOf="@+id/imgFavouriteItemIcon"
            app:layout_constraintLeft_toRightOf="@+id/imgFavouriteItemIcon"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>