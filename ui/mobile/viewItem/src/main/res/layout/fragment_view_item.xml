<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewFavouriteViewModel"
            type="tld.domain.viewmodels.ViewItemViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context="tld.domain.viewitem.ViewItemFragment"
        android:background="@color/light_background"
        style="@style/ParentView">

        <TextView
            android:id="@+id/tvNoContentMessage"
            style="@style/HeadingTextView"
            android:textColor="@color/dark_text"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/imgBtnBack"
            app:layout_constraintBottom_toBottomOf="@+id/imgBtnBack"
            app:layout_constraintLeft_toRightOf="@+id/imgBtnBack"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@{viewFavouriteViewModel.item.itemName}"
            tools:text="Name"/>

        <ImageButton
            style="@style/MyButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgBtnBack"
            android:src="@drawable/ic_back"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNoContentMessage"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgFavouriteItemIcon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_img_dark"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/small_margin"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/imgbPlayVid"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_play"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/medium_margin"
            app:tint="@color/light_text"
            android:tint="@color/light_text"
            android:alpha="0.8"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/imgFavouriteItemIcon"
            app:layout_constraintBottom_toBottomOf="@+id/imgFavouriteItemIcon"
            app:layout_constraintLeft_toLeftOf="@+id/imgFavouriteItemIcon"
            app:layout_constraintRight_toRightOf="@+id/imgFavouriteItemIcon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>