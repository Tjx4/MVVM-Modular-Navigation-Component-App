<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="videosViewModel"
            type="tld.domain.viewmodels.VideosViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ParentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context=".VideosFragment"
        android:background="@color/light_background">

        <TextView
            android:id="@+id/tvNoContentMessage"
            style="@style/HeadingTextView"
            android:layout_marginTop="@dimen/large_margin"
            android:text="Videos"
            android:textColor="@color/dark_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_horizontal_animation"
            android:layout_marginTop="@dimen/medium_margin"
            android:paddingRight="@dimen/small_margin"
            app:layout_constraintTop_toBottomOf="@+id/tvNoContentMessage"
            android:background="@color/light_gray_background"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:visibility="invisible"
            android:id="@+id/avlClosestLoader"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="@color/dark_text"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintTop_toBottomOf="@+id/tvNoContentMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>