<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMModularNavigationComponentApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <style name="ThemeColors">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="ParentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="BaseTextView">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HeadingTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/heading_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SubHeadingTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/sub_heading_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NormalTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ErrorTextView" parent="NormalTextView">
        <item name="android:textColor">@color/red_text</item>
    </style>
    <style name="SmallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SmallErrorTextView" parent="SmallTextView">
        <item name="android:textColor">@color/red_text</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/fx_button_background</item>
    </style>
    <style name="BlackButton" parent="MyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:background">@drawable/black_button_background</item>
    </style>

    <style name="MyEditText" parent="ThemeColors">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/xsmall_margin</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#eee</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="MenuItems">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/light_text</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>